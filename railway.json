{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install --no-cache-dir -r requirements.txt && echo 'Build completed successfully'"
  },
  "deploy": {
    "startCommand": "echo 'Starting on port 8080' && uvicorn main:app --host 0.0.0.0 --port 8080 --timeout-keep-alive 60",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30
  },
  "env": {
    "NODE_ENV": "production",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "UVICORN_WORKERS": "1"
  }
}
